# Dockerfile for Development
FROM node:20-slim

ARG USER_ID=1000
ARG GROUP_ID=1000

WORKDIR /app

RUN apt-get update && apt-get install -y libc6 openssl && rm -rf /var/lib/apt/lists/*

RUN groupadd -g ${GROUP_ID} nodeuser && \
    useradd -u ${USER_ID} -g ${GROUP_ID} -m nodeuser

COPY --chown=nodeuser:nodeuser package.json package-lock.json* ./

RUN npm ci

COPY --chown=nodeuser:nodeuser prisma/schema.prisma ./
RUN npx prisma generate

COPY --chown=nodeuser:nodeuser . .

ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
EXPOSE 3000

USER nodeuser

CMD ["npm", "run", "dev"]